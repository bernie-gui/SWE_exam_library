{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make: Debug Main",
            "type": "shell",
            "command": "make",
            "args": [
                "BUILD=debug"
            ],
            "group": "build"
        },
        {
            "label": "Make: Debug Examples",
            "type": "shell",
            "command": "make",
            "args": [
                "BUILD=debug",
                "examples"
            ],
            "group": "build"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "make",
            "args": [
                "run_tests"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc",
                {
                    "owner": "cpp",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": {
                        "regexp": "^(.*):(\\d+): FAILED:$",
                        "file": 1,
                        "line": 2,
                        "message": 0
                    }
                }
            ]
        }
    ]
}